<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NumberGuessingGameUI.MainPage"
             BackgroundColor="#f0f0f0">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Welcome Message -->
            <Label Text="Hello there! Welcome to NumberGuessingGame"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Input Section -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Enter your number:" 
                       VerticalOptions="Center"
                       FontSize="14"/>
                <Entry x:Name="numberInput" 
                       Placeholder="1-100"
                       Keyboard="Numeric"
                       WidthRequest="100"
                       Completed="OnGuessClicked"/>
                <Button x:Name="guessButton"
                        Text="Guess" 
                        Clicked="OnGuessClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"/>
            </HorizontalStackLayout>

            <!-- Tries Counter -->
            <Label x:Name="triesLabel"
                   Text="Tries: 0"
                   FontSize="14"/>

            <!-- Message Display -->
            <Frame BorderColor="#ccc" 
                   BackgroundColor="White"
                   Padding="10"
                   HeightRequest="200">
                <ScrollView>
                    <Label x:Name="messageDisplay" 
                           FontSize="13"/>
                </ScrollView>
            </Frame>

            <!-- Play Again Button -->
            <Button x:Name="playAgainButton"
                    Text="Play Again" 
                    Clicked="OnPlayAgainClicked"
                    IsVisible="False"
                    BackgroundColor="#2196F3"
                    TextColor="White"/>

            <!-- Instructions -->
            <Label Text="Guess a number between 1 and 100"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>